<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_b_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 이름"
            android:drawableStart="@drawable/ic_member"
            android:drawablePadding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_b_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="userID"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성날짜:"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_b_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Date"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_b_binName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="쓰레기통 이름"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_b_binLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="쓰레기통 위치"
            android:textSize="18sp" />

    </LinearLayout>

        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="분류"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="중량(kg)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg당 가격(원)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="합계(원)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <View
                android:layout_marginTop="2dip"
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유리"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_glassW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_totalGlassPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플라스틱"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_plasticW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_totalPlasticPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종이"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_paperW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_totalPaperPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고철"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_metalW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textAlignment="center"
            android:textSize="18sp" />
                <TextView
            android:id="@+id/tv_totalMetalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow
                android:layout_marginBottom="5dp">
                <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  총 합계(원)"
        android:textAlignment="center"
        android:textSize="18sp" />
                <TextView
        android:id="@+id/tv_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="총 합계(원)"
        android:textAlignment="center"
        android:layout_span="3"
        android:textSize="18sp" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />


        </TableLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:background="@drawable/custom_button"
                    android:text="구매하기" />

                <Button
                    android:id="@+id/btn_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:background="@drawable/custom_button"
                    android:text="목록" />
        </LinearLayout>

</LinearLayout>