<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SellActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sell 페이지"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쓰레기통"
                android:layout_column="1"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_binName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="쓰레기통 이름"
                android:layout_column="2"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치: "
                android:layout_column="1"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_binLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="쓰레기통 위치"
                android:layout_column="2"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유리병: "
                android:layout_column="1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_glass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (50원/Kg) "
                android:layout_column="3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalGlassPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="유리병 가격 합계"
                android:layout_column="4"
                android:textSize="18sp"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플라스틱: "
                android:layout_column="1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_plastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (50원/Kg) "
                android:layout_column="3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalPlasticPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="플라스틱 가격 합계"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종이: "
                android:layout_column="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (10원/Kg) "
                android:layout_column="3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalPaperPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="종이 가격 합계"
                android:layout_column="4"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고철: "
                android:layout_column="1"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (500원/Kg) "
                android:layout_column="3"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_totalMetalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="고철 가격 합계"
                android:layout_column="4"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총합계:"
                android:layout_column="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="합계"
                android:layout_column="2"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_sellContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="판매하기" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="취소"/>

    </LinearLayout>


</LinearLayout>