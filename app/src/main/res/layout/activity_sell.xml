<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SellActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/tv_binName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="쓰레기통 이름"
            android:drawableLeft="@drawable/ic_bin"
            android:textSize="20sp" />

    </LinearLayout>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치: "
        android:drawableStart="@drawable/ic_location"
        android:layout_marginStart="20dp"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/tv_binLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="30dp"
        android:hint="쓰레기통 위치"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <View
            android:layout_marginTop="2dip"
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="품목"
                android:textAlignment="center"
                android:layout_column="1"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="중량(kg)"
                android:textAlignment="center"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg당 가격(원)"
                android:textAlignment="center"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="합계(원)"
                android:textAlignment="center"
                android:textSize="19sp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <View
            android:layout_marginTop="2dip"
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유리병"
                android:layout_column="1"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_glass"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_column="3"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalGlassPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="유리병 합계"
                android:layout_column="4"
                android:textAlignment="center"
                android:textSize="18sp"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플라스틱"
                android:layout_column="1"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_plastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_column="3"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalPlasticPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="플라스틱 합계"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종이"
                android:layout_column="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_column="3"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_totalPaperPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="종이 합계"
                android:layout_column="4"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고철"
                android:layout_column="1"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_metal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_column="2"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:layout_column="3"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_totalMetalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="고철 합계"
                android:layout_column="4"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <View
            android:layout_marginTop="2dip"
            android:layout_height="2dip"
            android:background="#FF909090" />
        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총합계:"
                android:layout_column="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="총 합계"
                android:layout_column="2"
                android:textSize="19sp" />
        </TableRow>


        <View
            android:layout_marginTop="2dip"
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_sellContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/custom_button"
            android:text="판매하기" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/custom_button"
            android:text="취소"/>

    </LinearLayout>


</LinearLayout>