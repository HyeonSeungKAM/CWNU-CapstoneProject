<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".BinMainActivity">

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_llayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_binName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="쓰레기통이름"
                android:drawableStart="@drawable/ic_bin"
                android:drawablePadding="5dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_editBin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="정보 수정"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="메인"
                android:textSize="12dp"/>

        </LinearLayout>

        <View
            android:layout_width="300dip"
            android:layout_height="2dip"
            android:layout_marginHorizontal="10dp"
            android:background="#5a5a5a" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="위치:"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_binLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_span="2"
            android:hint="쓰레기통 위치"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="측정 날짜 및 시간:"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_span="2"
            android:hint="측정 날짜 및 시간"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_llayout"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_glass"
                        android:src="@drawable/img_glass" />

                    <TextView
                        android:id="@+id/gf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/img_glass"
                        android:layout_alignTop="@id/img_glass"
                        android:layout_alignRight="@id/img_glass"
                        android:layout_alignBottom="@id/img_glass"
                        android:background="#59000000"
                        android:gravity="center"
                        android:padding="15dp"
                        android:shadowColor="#FFFFFF"
                        android:text="가득참"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="25.3dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유리병"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_glassW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="glassW"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_plastic"
                        android:src="@drawable/img_plastic" />

                    <TextView
                        android:id="@+id/plf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/img_plastic"
                        android:layout_alignTop="@id/img_plastic"
                        android:layout_alignRight="@id/img_plastic"
                        android:layout_alignBottom="@id/img_plastic"
                        android:background="#59000000"
                        android:gravity="center"
                        android:padding="15dp"
                        android:shadowColor="#FFFFFF"
                        android:text="가득참"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="25.3dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="플라스틱"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_plasticW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="plasticW"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_paper"
                        android:src="@drawable/img_paper" />

                    <TextView
                        android:id="@+id/pf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/img_paper"
                        android:layout_alignTop="@id/img_paper"
                        android:layout_alignRight="@id/img_paper"
                        android:layout_alignBottom="@id/img_paper"
                        android:background="#59000000"
                        android:gravity="center"
                        android:padding="15dp"
                        android:shadowColor="#FFFFFF"
                        android:text="가득참"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="25.3dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종이"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_paperW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="paperW"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_metal"
                        android:src="@drawable/img_metal" />


                    <TextView
                        android:id="@+id/mf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/img_metal"
                        android:layout_alignTop="@id/img_metal"
                        android:layout_alignRight="@id/img_metal"
                        android:layout_alignBottom="@id/img_metal"
                        android:background="#59000000"
                        android:gravity="center"
                        android:padding="15dp"
                        android:shadowColor="#FFFFFF"
                        android:text="가득참"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="25.3dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고철"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_metalW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metalW"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

     <Button
         android:id="@+id/btn_binList"
         android:layout_width="wrap_content"
         android:layout_height="75dp"
         android:background="@drawable/custom_button_below"
         android:drawableTop="@drawable/ic_bins"
         android:text="쓰레기통 목록"
         android:textSize="14dp" />

    <Button
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="판매 게시판"
        android:background="@drawable/custom_button_below"
        android:drawableTop="@drawable/ic_board"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_sell"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="판매하기"
        android:background="@drawable/custom_button_below"
        android:drawableTop="@drawable/ic_sell"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_salesList"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="판매내역"
        android:background="@drawable/custom_button_below"
        android:drawableTop="@drawable/ic_sdetail"
        android:textSize="14dp" />

    </LinearLayout>


</LinearLayout>