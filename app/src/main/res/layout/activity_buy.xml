<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="분류"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="중량(kg)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg당 가격(원)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="합계(원)"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <View
                android:layout_marginTop="2dip"
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유리"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_glassW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_totalGlassPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="플라스틱"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_plasticW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_totalPlasticPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종이"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_paperW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_totalPaperPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고철"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_metalW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_totalMetalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  총 합계(원)"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="총 합계(원)"
                    android:textAlignment="center"
                    android:layout_span="3"
                    android:textSize="18sp" />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:id="@+id/textView151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제금액"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_Total2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="총 합계(원)"
                    android:textAlignment="center"
                    android:layout_span="3"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TableRow
                android:layout_span="2">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매자"
                    android:textSize="20sp" />

            </TableRow>

            <View
                android:layout_height="5dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID(이름)"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tv_seller_userIDName"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="userID (userName)"
                    android:textSize="18sp"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tv_seller_phoneNum"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="userPhone_num"
                    android:textSize="18sp"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입금계좌"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tv_seller_account"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="00은행 계좌번호"
                    android:textSize="18sp"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매자 주소"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tv_seller_address"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="user_Address"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_span="2">

                <TableLayout
                    android:layout_gravity="center"
                    android:layout_span="2">

                    <TableRow
                        android:layout_width="386dp"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="40dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="76dp"
                            android:text="구매하기" />

                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="40dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="76dp"
                            android:text="목록" />

                    </TableRow>
                </TableLayout>

            </TableRow>
        </TableLayout>


    </LinearLayout>


</ScrollView>