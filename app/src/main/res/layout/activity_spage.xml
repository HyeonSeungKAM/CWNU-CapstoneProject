<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:stretchColumns="*"
    android:shrinkColumns="*">

    <TableRow android:layout_width="323dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="작성자 ID:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="작성자 ID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="날짜"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="10dp"
            android:layout_span="2"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분류"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중량(kg)"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg당 가격(원)"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총액(원)"
            android:textAlignment="center"
            android:textSize="20sp" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유리병"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_totalGlassPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플라스틱"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_plastic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_totalPlasticPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종이"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="10"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_totalPaperPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고철"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_metal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_totalMetalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 합계(원)"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_span="3"
            android:textSize="20sp" />

    </TableRow>

    <TableRow
        android:layout_width="340dp"
        android:layout_marginTop="200dp">
        <LinearLayout
            android:orientation="horizontal"

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:text="구매하기" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="76dp"
            android:text="목록" />
        />

    </TableRow>


</TableLayout>