<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="userName"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="83dp"
                android:layout_height="41dp"
                android:text="로그아웃"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"/>

        </TableRow>

        <TableRow>

            <Spinner
                android:id="@+id/spinner_binName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_span='3'
                android:minHeight="41dp"
                android:spinnerMode="dialog" />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유리병"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_glassW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="glass"
                android:layout_span='2'
                android:textSize="24sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플라스틱"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_plasticW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="plastic"
                android:layout_span='2'

                android:textSize="24sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종이"
                android:textSize="24sp"
               />

            <TextView
                android:id="@+id/tv_paperW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="paper"
                android:layout_span='2'

                android:textSize="24sp"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고철"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_metalW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="metal"
                android:layout_span='2'

                android:textSize="24sp" />

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_orientation="horizontal"
                android:layout_span='3'>

                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="76dp"
                    android:text="판매하기" />

                <Button
                    android:id="@+id/btn_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="76dp"
                    android:text="목록"

                    />


            </LinearLayout>



        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>